        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="login-fields">

        @Html.PasswordFor(m => m.Password, new { @class = "form-control login-form", placeholder = "Password" })
        <span class="login-fields-icon"><i class="fa fa-lock" aria-hidden="true"></i></span>


        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
           
            <div >

