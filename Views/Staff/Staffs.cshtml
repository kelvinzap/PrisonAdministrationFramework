@model PrisonAdministrationSystem.Models.StaffsVewModel
@{
    ViewBag.Title = "Staffs";
}
<div class="body-header">
    <h2 class="form-header-text">Staffs</h2>
</div>


    <div class="staff">

        @foreach (var staff in Model.Staffs)
        {

                <div class="details">
                    <div class="staffs-image">

                        <img class="image-card image-round" src="~/Content/Staff/@staff.Passport"/>
                    </div>
                    <div class="details-content">
                        <h6>@(staff.LastName + "  " + staff.FirstName + "  " + staff.MiddleName)</h6>
                        <p class="text-size-12 font-color-grey">@staff.Role.Name</p>
                        <div class="actions">
                            <a href="@Url.Action("Edit", "Staff", new {Id = staff.Id})">
                                Edit
                            </a>|
                            <a class="js-staff-remove" data-staff-id="@staff.Id" href="#">
                                Remove
                            </a>
                        </div>
                    </div>
                </div>

        }
    </div>

@section scripts
{
    <script>
        $(document).ready(function() {
            $(".js-staff-remove").click(function(e) {
                var button = $(e.target);

                bootbox.dialog({
                    title: 'Confirm',
                    message: 'Are you sure you want to remove this staff?',
                    size: 'large',
                    buttons: {
                        no: {
                            label: 'No',
                            className: 'btn-default',
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                      
                        yes: {
                            label: 'Yes',
                            className: 'btn-danger',
                            callback: function() {
                                $.ajax({
                                        url: "/api/staff/" + button.attr("data-staff-id"),
                                        method: "DELETE"
                                    })
                                    .done(function() {
                                        button.parents(".details").fadeOut(function() {
                                            $(this).remove();
                                        });
                                    })
                                    .fail(function() {
                                        alert("Something went wrong");
                                    });
                            }
                        }
                    }
                });

               
            });
        });
    </script>
}
